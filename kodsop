using System;
namespace chislarandomnii
{
    class Program
    {
        public int Random(int a, int b)
        {
            Random Random = new Random();
            return Random.Next(a, b);
        }
        static void Main(string[] args)
        {
            Console.WriteLine("Введите начальный отрезок");
            int a = int.Parse(Console.ReadLine());
            Console.WriteLine("Введите конечный отрезок");
            int b = int.Parse(Console.ReadLine());
           
            for (int i = 0; i < 100; i++)
            {
                Program clychainoe = new Program();
                Console.Write($"{clychainoe.Random(a,b)}, ");
            }

        }

    }
}
