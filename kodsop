2.2

Console.WriteLine("Введите числа");
int a = int.Parse(Console.ReadLine());
int b = int.Parse(Console.ReadLine());
int c = int.Parse(Console.ReadLine());
int M = 0;
if (a > b && a > c)
{
    M = a;
}
if (b > c && b > a)
{
    M = b;
}
else
{
    M = c;
}
Console.WriteLine($"Самое большое число: {M}");



2.3

var array = new int[] { 2, 20, 101, 9, 3, 27, 33, 3};
int first = array.First();
int last = array.Last();
int countDivLast = array.Count(i => i % first == 0);
int countDivFirst = array.Count(i => i % last == 0);
Console.WriteLine($"Чисел котрые делатся на первый элемент: {countDivLast}");
Console.WriteLine($"Чисел котрые делятся на последний элемент: {countDivFirst}");


2.4

int v = 0;
Console.WriteLine("Введите число : ");
int n = int.Parse(Console.ReadLine());
while (n != 0)
{
   v = v * 10;
   v += n % 10;
   n = n / 10;
}
Console.WriteLine($"Перевернутый результат: {v}");


2.5

int n;
Console.WriteLine("Введите размер последовательности: ");
n = int.Parse(Console.ReadLine());
float[] massiv = new float[n];
Console.WriteLine("Введите элементы последовательности(Первый элемент должен быть нечетным!): ");
for (int g = 0; g < n; g++)
{
   massiv[g] = float.Parse(Console.ReadLine());
 }
float Sum = 0;
int i = 0;
while (i < n) 
{
    
    if (massiv[i] % 2 == 1)
    {
        Sum += massiv[i];
        i++;

    }
    else
    {
        break;
        
    }
}
Console.WriteLine("Сумма нечетных чисел =" + Sum);


2.6

int a = 23;
int b = 37;
int sum = 0;
for (int i = a; i < b; i++) 
{
    if (i % 4 == 0)
    {
        sum += i;
    }
}
Console.WriteLine($"Сумма положительных чисел кратных четырем: {sum}") ;



